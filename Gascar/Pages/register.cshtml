@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrazione";
}

<div class="auth-container">
    <form method="post" class="auth-card">
        <h1>Registrati</h1>
        <p>Crea il tuo account per ricarcare l'auto</p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error">@Model.ErrorMessage</div>
        }

        <div class="field">
            <label>Username</label>
            <input asp-for="Username" required />
        </div>
        <div class="field">
            <label>Email</label>
            <input asp-for="Email" type="email" required />
        </div>

        <div class="field">
            <label>Password</label>
            <input asp-for="Password" type="password" required />
        </div>

        <div class="field">
            <label>Conferma Password</label>
            <input asp-for="ConfirmPassword" type="password" required />
        </div>

        <button type="submit" class="btn">Registrati</button>

        <p class="switch">
            Hai gi√† un account?
            <a asp-page="/Login">Accedi</a>
        </p>
    </form>
</div>
