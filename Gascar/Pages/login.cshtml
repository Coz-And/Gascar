@page
@model LoginModel

<h2>Login</h2>

<form method="post">
    <input asp-for="Username" placeholder="Username" />
    <br />
    <input asp-for="Password" type="password" placeholder="Password" />
    <br />
    <button type="submit">Login</button>
</form>
@if (Model.ErrorMessage != null)
{
    <p style="color:red;">@Model.ErrorMessage</p>
}