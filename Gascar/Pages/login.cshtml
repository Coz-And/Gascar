@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/L&R.css">
</head>
<div class="auth-container">
    <form method="post" class="auth-card">
        <h1>login</h1>
        <p>Accedi per ricaricare l'auto</p>

        <p></p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error">@Model.ErrorMessage</div>
        }

        <div class="field">
            <label>Username</label>
            <input asp-for="Username" required />
        </div>
        <div class="field">
            <label>Password</label>
            <input asp-for="Password" type="password" required />
        </div>


        <button type="submit" class="btn">Login</button>

        <p class="switch">
            non hai un account?
            <a asp-page="/Register">Registrati</a>
        </p>
    </form>